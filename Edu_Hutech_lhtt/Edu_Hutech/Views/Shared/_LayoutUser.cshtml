<script>
    function dangky_lhtt() {
        if (window.confirm("Bạn có muốn đăng ký lớp học tiên tiến không?") == true) {
            window.location.href = '@Url.Action("DangKy", "LopHocTienTien")';
        }
    }
</script>
<script>
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: '/SinhVien5Tot/KiemTra_DKy',
            contentType: false,
            processData: false,
            success: function (response) {
                if (response.success) {
                    if (response.mess == "dadangky_SV5T") {
                        $('#dangky_SV5T').css('display', 'none');
                        document.getElementById("dangky_SV5T").href = '#'
                    }
                    if (response.mess == "dadangky_LHTT") {
                        $('#dangky_LHTT').css('display', 'none');
                        document.getElementById("dangky_LHTT").href = '#'
                    }
                    if (response.lt == "koloptruong") {
                        $('#loptruong').css('display', 'none');
                        document.getElementById("loptruong").href = '#'
                    }
                    if (response.mess == "dadangky_LHTT_SV5T") {
                        $('#dangky_LHTT').css('display', 'none');
                        $('#dangky_SV5T').css('display', 'none');
                        document.getElementById("dangky_LHTT").href = '#'
                        document.getElementById("dangky_SV5T").href = '#'
                    }
                }
            },
            error: function (error) {
                alert("Lỗi!!!" + error);
            }
        })
    })  
</script>
